<h1>Listing guest_houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Stars count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_houses.each do |guest_house| %>
      <tr>
        <td><%= guest_house.name %></td>
        <td><%= guest_house.city_id %></td>
        <td><%= guest_house.stars_count %></td>
        <td><%= link_to 'Show', guest_house %></td>
        <td><%= link_to 'Edit', edit_guest_house_path(guest_house) %></td>
        <td><%= link_to 'Destroy', guest_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

